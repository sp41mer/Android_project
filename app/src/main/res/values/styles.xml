<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- ###################- CUSTOM STYLES ################################################### -->

    <!-- stats_cards styles-->
    <style name="AppTheme.stats_card__cards__image">
        <item name="android:layout_weight">0.4</item>
        <item name="android:layout_height">@dimen/layout_height_120</item>
        <item name="android:layout_width">@dimen/layout_width_0</item>
        <item name="android:padding">@dimen/size_5</item>
    </style>

    <style name="AppTheme.stats_card__linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="AppTheme.stats_card__linear_layout__inner">
        <item name="android:layout_width">@dimen/layout_width_0</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.8</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.stats_card__linear_layout__inner__text_view__first">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_marginLeft">@dimen/size_10</item>
        <item name="android:layout_marginTop">@dimen/size_5</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="AppTheme.stats_card__linear_layout__inner__text_view__second" parent="AppTheme.stats_card__linear_layout__inner__text_view__first">
        <item name="android:layout_marginBottom">@dimen/size_5</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_below">@+id/card_text_1</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="AppTheme.stats_card__delete">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="srcCompat">@android:drawable/ic_delete</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <!--end stats_card-->

    <!-- activity_main styles -->

    <style name="AppTheme.activity_main__drawer_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="AppTheme.activity_main__include">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme.activity_main__navigation_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- end activity_main styles -->

    <!-- app_bar_main styles -->

    <style name="AppTheme.app_bar_main__coordinator_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="AppTheme.app_bar_main__app_bar_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="AppTheme.app_bar_main__app_bar_layout__toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.app_bar_main__frame_layout">
        <item name="android:paddingTop">@dimen/size_55</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="AppTheme.app_bar_main__floating_action_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:src">@android:drawable/ic_menu_camera</item>
    </style>

    <!-- end app_bar_main styles -->

    <!-- nav_header_main styles -->

    <style name="AppTheme.nav_header_main__linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/nav_header_height</item>
        <item name="android:background">@drawable/side_nav_bar</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="AppTheme.nav_header_main__image_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/nav_header_vertical_spacing</item>
        <item name="android:src">@drawable/icon</item>
    </style>

    <style name="AppTheme.nav_header_main__text_view__first">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/nav_header_vertical_spacing</item>
        <item name="android:text">@string/menu_big_header</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="AppTheme.nav_header_main__text_view__second">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/menu_small_header</item>
    </style>

    <!-- end nav_header_main styles -->

    <!-- fragment_stats styles -->

    <style name="AppTheme.fragment_stats__relative_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.fragment_stats__recycler_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- end fragment_stats styles -->

    <!-- hdpi__fragment_home styles-->

    <style name="AppTheme.hdpi__fragment_home__scroll_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="AppTheme.hdpi__fragment_home__scroll_view__linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.hdpi__fragment_home__scroll_view__image_view">
        <item name="android:layout_width">@dimen/layout_width_250</item>
        <item name="android:layout_height">@dimen/layout_width_250</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/size_50</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="AppTheme.hdpi__fragment_home__scroll_view__text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/size_40</item>
        <item name="android:padding">@dimen/size_15</item>
        <item name="android:text">@string/no_money</item>
        <item name="android:textSize">@dimen/font_size_24</item>
    </style>

    <!-- end hdpi__fragment_home styles -->

    <!-- mdpi__fragment_home styles-->

    <style name="AppTheme.mdpi__fragment_home__scroll_view" parent="AppTheme.hdpi__fragment_home__scroll_view" />

    <style name="AppTheme.mdpi__fragment_home__scroll_view__linear_layout" parent="AppTheme.hdpi__fragment_home__scroll_view__linear_layout" />

    <style name="AppTheme.mdpi__fragment_home__scroll_view__image_view" parent="AppTheme.hdpi__fragment_home__scroll_view__image_view">
        <item name="android:layout_width">@dimen/size_500</item>
        <item name="android:layout_height">@dimen/size_500</item>
        <item name="android:layout_marginTop">@dimen/layout_height_120</item>
    </style>

    <style name="AppTheme.mdpi__fragment_home__scroll_view__text_view" parent="AppTheme.hdpi__fragment_home__scroll_view__text_view">
        <item name="android:padding">@dimen/size_30</item>
        <item name="android:textSize">@dimen/size_40</item>
    </style>

    <!-- end mdpi__fragment_home styles-->

    <!-- xhdpi__fragment_home styles-->

    <style name="AppTheme.xhdpi__fragment_home__scroll_view" parent="AppTheme.hdpi__fragment_home__scroll_view" />

    <style name="AppTheme.xhdpi__fragment_home_scroll_view__linear_layout" parent="AppTheme.hdpi__fragment_home__scroll_view__linear_layout" />

    <style name="AppTheme.xhdpi__fragment_home__scroll_view__image_view" parent="AppTheme.hdpi__fragment_home__scroll_view__image_view">
        <item name="android:layout_width">@dimen/size_300</item>
        <item name="android:layout_height">@dimen/size_300</item>
        <item name="android:layout_marginTop">@dimen/size_50</item>
    </style>

    <style name="AppTheme.xhdpi__fragment_home__scroll_view__text_view" parent="AppTheme.hdpi__fragment_home__scroll_view__text_view">
        <item name="android:padding">@dimen/size_15</item>
        <item name="android:textSize">@dimen/size_sp_25</item>
    </style>

    <!-- end xhdpi__fragment_home styles-->

    <!-- xxhdpi__fragment_home styles-->

    <style name="AppTheme.xxhdpi__fragment_home__scroll_view" parent="AppTheme.hdpi__fragment_home__scroll_view" />

    <style name="AppTheme.xxhdpi__fragment_home_scroll_view__linear_layout" parent="AppTheme.hdpi__fragment_home__scroll_view__linear_layout" />

    <style name="AppTheme.xxhdpi__fragment_home__scroll_view__image_view" parent="AppTheme.hdpi__fragment_home__scroll_view__image_view">
        <item name="android:layout_width">@dimen/size_300</item>
        <item name="android:layout_height">@dimen/size_300</item>
        <item name="android:layout_marginTop">@dimen/size_50</item>
    </style>

    <style name="AppTheme.xxhdpi__fragment_home__scroll_view__text_view" parent="AppTheme.hdpi__fragment_home__scroll_view__text_view">
        <item name="android:padding">@dimen/size_15</item>
        <item name="android:textSize">@dimen/size_sp_25</item>
    </style>

    <!-- end xxhdpi__fragment_home styles-->

    <!-- xxxhdpi__fragment_home styles-->

    <style name="AppTheme.xxxhdpi__fragment_home__scroll_view" parent="AppTheme.hdpi__fragment_home__scroll_view" />

    <style name="AppTheme.xxxhdpi__fragment_home_scroll_view__linear_layout" parent="AppTheme.hdpi__fragment_home__scroll_view__linear_layout" />

    <style name="AppTheme.xxxhdpi__fragment_home__scroll_view__image_view" parent="AppTheme.hdpi__fragment_home__scroll_view__image_view">
        <item name="android:layout_width">@dimen/size_350</item>
        <item name="android:layout_height">@dimen/size_350</item>
        <item name="android:layout_marginTop">@dimen/size_60</item>
    </style>

    <style name="AppTheme.xxxhdpi__fragment_home__scroll_view__text_view" parent="AppTheme.hdpi__fragment_home__scroll_view__text_view">
        <item name="android:padding">@dimen/size_15</item>
        <item name="android:textSize">@dimen/size_sp_30</item>
    </style>

    <!-- end xxxhdpi__fragment_home styles-->

    <!-- fragment_settings styles -->

    <style name="AppTheme.fragment_settings__linear_layout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme.fragment_settings__scroll_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="AppTheme.fragment_settings__linear_layout__linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/size_5</item>
    </style>

    <style name="AppTheme.fragment_settings__card" parent="AppTheme.cards_styles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="cardCornerRadius">@dimen/size_5</item>
        <item name="contentPadding">@dimen/size_10</item>
    </style>

    <style name="AppTheme.fragment_settings__card__linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/size_100</item>
    </style>

    <style name="AppTheme.fragment_settings__card__linear_layout__edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>
        <item name="android:ems">10</item>
    </style>

    <style name="AppTheme.fragment_settings__card__linear_layout__text_view__first">
        <item name="android:text">@string/goal_text_view_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">@dimen/size_20</item>
    </style>

    <style name="AppTheme.fragment_settings__card__linear_layout__text_view__second">
        <item name="android:text">@string/goal_button_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/size_20</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
    </style>

    <!-- end fragment_settings styles -->

    <style name="AppTheme.cards_styles" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/color_white</item>
        <item name="cardElevation">@dimen/size_5</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- ##################### End custom styles ############################################## -->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
